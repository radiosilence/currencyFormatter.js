{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "noEmit": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "target": "es2020",
    "rootDir": "src"
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.ts", "index.d.ts"]
}
